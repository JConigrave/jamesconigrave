check_winner = function(gd, player = "A", ai = TRUE) {
cols <- lapply(1:3, function(x) {
sum(gd[, x] == player, na.rm = T)
})
rows <- lapply(1:3, function(x) {
sum(gd[x, ] == player, na.rm = T)
})
diag1 <- sum(diag(gd) == player, na.rm = T)
diag2 = sum(c(gd[1, 3],
gd[2, 2],
gd[3, 1]) == player, na.rm = T)
if(ai){
